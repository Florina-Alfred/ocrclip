FROM ubuntu:22.04
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
  python3 python3-venv python3-pip build-essential patchelf wget curl unzip zip \
  libxcb1 libx11-6 libxkbcommon0 libegl1 libgl1-mesa-glx libxcb-xinerama0 \
  ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace
# Copy repo into image (in CI you may prefer to mount the repo instead)
COPY . /workspace

CMD ["/bin/bash"]
